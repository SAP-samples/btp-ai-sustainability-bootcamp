{
    "name": "sustainable-smart-factory-app",
    "version": "1.0.0",
    "description": "Sustainable Smart Factory App for BTP AI&Sustainability Bootcamp",
    "repository": "https://github.com/SAP-samples/btp-ai-sustainability-bootcamp",
    "license": "Apache License Version 2.0",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/cds-odata-v2-adapter-proxy": "^1.8.14",
        "@sap/cloud-sdk-vdm-maintenance-order-service": "^2.0.0",
        "@sap/xsenv": "^3.2.2",
        "@sap/xssec": "^3",
        "axios": "^0.26.1",
        "cors": "^2.8.5",
        "express": "^4",
        "fs": "0.0.1-security",
        "hdb": "^0.19.2",
        "http": "0.0.1-security",
        "https": "^1.0.0",
        "passport": "^0.5.2",
        "request": "^2.88.2",
        "smartfactory": "./"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.3.3",
        "@sap/ux-specification": "^1.100.1"
    },
    "scripts": {
        "start": "cds run",
        "watch": "cds watch",
        "undeploy": "cf undeploy sustainable-smart-factory-app --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "aicore": {
            "kind": "config",
            "dest": "S4HC_AICOREBOOTCAMP",
            "url": "_AICORE_DEPLOYMENT_URL_",
            "resourcegroup": "_AICORE_RESOURCE_GROUP_",
            "inferences": {
                "imageseg": "/_AICORE_IMAGESEG_DEPLOYMENT_ID_/v1/models/imagesegmodel:predict",
                "soundclass": "/_AICORE_SOUNDCLASS_DEPLOYMENT_ID_/v1/models/soundmodel:predict"
            },
            "fsurl": "_AICORE_APP_FS_URL_"
        },
        "requires": {
            "aicore": {
                "kind": "rest",
                "credentials": {
                    "url": "_AICORE_DEPLOYMENT_URL_"
                }
            },
            "db": {
                "kind": "hana"
            },
            "uaa": {
                "kind": "xsuaa"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    }
}